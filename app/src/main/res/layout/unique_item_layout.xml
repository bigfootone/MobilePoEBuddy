<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="215dp">

                <TextView
                    android:text="BaseType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.04"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:id="@+id/UniqueBaseType"
                    android:layout_below="@+id/UniqueName"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UniqueName"
                    android:layout_weight="0.04"
                    android:textAlignment="center"
                    android:gravity="bottom"
                    android:layout_below="@+id/space"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="17dp"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/solaris_lorica"
                    android:id="@+id/uniqueImageView"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/UniqueBaseType"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star"
                    android:layout_marginEnd="27dp"
                    android:id="@+id/favouritesButton"
                    android:layout_alignTop="@+id/UniqueName"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="1"
                android:id="@+id/linearLayout5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp">

                <TextView
                    android:text="FlavourText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UniqueFlavourText"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:layout_above="@+id/linearLayout5"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/linear1">

                    <TextView
                        android:text="Armour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/UniqueArmourTitle"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:gravity="fill" />

                    <TextView
                            android:text="Evasion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/UniqueEvasionTitle"
                            android:textAlignment="center"
                        android:layout_weight="1"
                        android:gravity="fill" />

                    <TextView
                            android:text="Energy Shield"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/UniqueESTitle"
                            android:textAlignment="center"
                        android:layout_weight="1"
                        android:gravity="fill" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/linear2">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/UniqueArmourValue"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:gravity="fill" />

                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/UniqueEvasionValue"
                            android:textAlignment="center"
                        android:layout_weight="1"
                        android:gravity="fill" />

                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/UniqueESValue"
                            android:textAlignment="center"
                        android:layout_weight="1"
                        android:gravity="fill" />

                </LinearLayout>

                <TextView
                    android:text="Attributes"
                    android:layout_width="match_parent"
                    android:id="@+id/UniqueDescription"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>